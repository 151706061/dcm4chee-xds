<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>org.dcm4che</groupId>
		<artifactId>dcm4chee-xds2-parent</artifactId>
		<version>2.0.6-SNAPSHOT</version>
	</parent>
	<artifactId>dcm4chee-xds2-repository-ear</artifactId>
	<packaging>ear</packaging>
	<name>Build EAR for XDS.b Repository (ebRS v3.0)</name>
	<dependencies>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-infoset</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-common</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-common-ws</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-store-api</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-store-file</artifactId>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-repository-war</artifactId>
			<version>${project.version}</version>
			<type>war</type>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-service</artifactId>
			<type>ejb</type>
			<version>${project.version}</version>
		</dependency>

		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-repository-ws</artifactId>
			<type>ejb</type>
			<version>${project.version}</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-repository-ejb</artifactId>
			<type>ejb</type>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-xds2-conf</artifactId>
			<type>jar</type>
			<version>${project.version}</version>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-storage-conf</artifactId>
			<type>jar</type>
			<version>${storage.version}</version>
		</dependency>
		<dependency>
			<groupId>org.dcm4che</groupId>
			<artifactId>dcm4chee-storage-service</artifactId>
			<type>jar</type>
			<version>${storage.version}</version>
		</dependency>
		<dependency>
			<groupId>org.slf4j</groupId>
			<artifactId>slf4j-api</artifactId>
			<version>1.6.1</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>jboss</groupId>
			<artifactId>jboss-annotations-ejb3</artifactId>
			<version>4.2.3.GA</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.jboss.spec.javax.servlet</groupId>
			<artifactId>jboss-servlet-api_3.0_spec</artifactId>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.apache.cxf</groupId>
			<artifactId>cxf-bundle</artifactId>
			<version>2.4.2</version>
			<scope>provided</scope>
		</dependency>
		<dependency>
			<groupId>org.hibernate.javax.persistence</groupId>
			<artifactId>hibernate-jpa-2.0-api</artifactId>
			<scope>provided</scope>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.6</version>
				<configuration>
					<defaultJavaBundleDir>lib</defaultJavaBundleDir>
					<classifier>${db}${asb}</classifier>
					<modules>
						<ejbModule>
							<groupId>org.dcm4che</groupId>
							<artifactId>dcm4chee-xds2-repository-ws</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.dcm4che</groupId>
							<artifactId>dcm4chee-xds2-service</artifactId>
						</ejbModule>
						<ejbModule>
							<groupId>org.dcm4che</groupId>
							<artifactId>dcm4chee-xds2-repository-ejb</artifactId>
						</ejbModule>
						<webModule>
							<groupId>org.dcm4che</groupId>
							<artifactId>dcm4chee-xds2-repository-war</artifactId>
							<contextRoot>/xds-rep-rs</contextRoot>
						</webModule>
					</modules>
					<version>6</version>
				</configuration>
			</plugin>
		</plugins>
	</build>

	<profiles>
		<profile>
			<id>jdbc-prefs</id>
            <activation>
                <property>
                    <name>environment</name>
                    <value>xdbuild</value>
                </property>
            </activation>
			<dependencies>
				<dependency>
					<groupId>org.dcm4che.jdbc.prefs</groupId>
					<artifactId>dcm4che-jdbc-prefs-ejb</artifactId>
					<classifier>${db}${asb}</classifier>
					<type>ejb</type>
					<version>${jdbc-prefs.version}</version>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-ear-plugin</artifactId>
						<version>2.6</version>
						<configuration>
							<defaultJavaBundleDir>lib</defaultJavaBundleDir>
							<classifier>${db}${asb}-jdbcprefs</classifier>
							<modules combine.children="append">
								<ejbModule>
									<groupId>org.dcm4che.jdbc.prefs</groupId>
									<artifactId>dcm4che-jdbc-prefs-ejb</artifactId>
									<classifier>${db}${asb}</classifier>
								</ejbModule>
							</modules>
							<version>6</version>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
		<profile>
			<id>asb</id>
			<dependencies>
				<dependency>
					<groupId>org.dcm4chee</groupId>
					<artifactId>dcm4chee-conf-db</artifactId>
					<classifier>asb</classifier>
					<type>ejb</type>
					<version>${conf-db-storage.version}</version>
				</dependency>
			</dependencies>
			<build>
				<plugins>
					<plugin>
						<groupId>org.apache.maven.plugins</groupId>
						<artifactId>maven-ear-plugin</artifactId>
						<version>2.6</version>
						<configuration>
							<defaultJavaBundleDir>lib</defaultJavaBundleDir>
							<modules combine.children="append">
								<ejbModule>
									<groupId>org.dcm4chee</groupId>
									<artifactId>dcm4chee-conf-db</artifactId>
								</ejbModule>
							</modules>
							<version>6</version>
						</configuration>
					</plugin>
				</plugins>
			</build>
		</profile>
	</profiles>
</project>
