<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" 
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">

  <display-name>dcm4chee-xds2-hl7</display-name>
  <servlet-mapping>
    <servlet-name>javax.ws.rs.core.Application</servlet-name>
    <url-pattern>/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>dcm4chee-xds2-hl7</servlet-name>
    <servlet-class>org.dcm4chee.xds2.registry.hl7.XdsHL7Servlet</servlet-class>
    <init-param>
      <param-name>ldapPropertiesURL</param-name>
      <param-value>file:${jboss.server.config.dir}/dcm4chee-xds2/ldap.properties</param-value>
    </init-param>
    <init-param>
      <param-name>xdsDeviceName</param-name>
      <param-value>dcm4chee-xds2-registry</param-value>
    </init-param>
    <init-param>
      <param-name>hl7AppName</param-name>
      <param-value>XDS^DCM4CHEE</param-value>
    </init-param>
    <init-param>
      <param-name>xdsAppName</param-name>
      <param-value>XDS_REGISTRY</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>
</web-app>