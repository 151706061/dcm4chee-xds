<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <parent>
        <groupId>org.dcm4che</groupId>
        <artifactId>dcm4chee-xds2-parent</artifactId>
        <version>2.0.6-SNAPSHOT</version>
    </parent>
    <artifactId>dcm4chee-xds2-registry-ear</artifactId>
    <packaging>ear</packaging>
    <name>Build EAR for XDS.b Registry (ebRS v3.0)</name>
    <properties>
        <conf-web-classifier/>
    </properties>
    <dependencies>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-infoset</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-common</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-common-ws</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-hl7</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-service</artifactId>
            <version>${project.version}</version>
            <type>ejb</type>
        </dependency>
        <dependency>
            <!-- for auto-initialization -->
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-tool-init</artifactId>
            <version>${project.version}</version>
        </dependency>


        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-browser-rs</artifactId>
            <type>war</type>
            <version>${project.version}</version>
        </dependency>

        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-ctrl</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-registry-persistence</artifactId>
            <classifier>${db}</classifier>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-registry-ws</artifactId>
            <type>ejb</type>
            <version>${project.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-registry-war</artifactId>
            <type>war</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-conf</artifactId>
            <type>jar</type>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>org.dcm4che</groupId>
            <artifactId>dcm4chee-xds2-pix-client</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.mysema.querydsl</groupId>
            <artifactId>querydsl-jpa</artifactId>
            <version>${querydsl.version}</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.slf4j</groupId>
            <artifactId>slf4j-api</artifactId>
            <version>1.6.1</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>jboss</groupId>
            <artifactId>jboss-annotations-ejb3</artifactId>
            <version>4.2.3.GA</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.jboss.spec.javax.servlet</groupId>
            <artifactId>jboss-servlet-api_3.0_spec</artifactId>
            <version>1.0.0.Final</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apache.cxf</groupId>
            <artifactId>cxf-bundle</artifactId>
            <version>2.4.2</version>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.dcm4chee</groupId>
            <artifactId>dcm4chee-conf-web</artifactId>
            <classifier>-xds${conf-web-classifier}</classifier>
            <type>war</type>
            <version>${dcm4chee-conf-web.version}</version>
        </dependency>
        <dependency>
            <groupId>org.hibernate.javax.persistence</groupId>
            <artifactId>hibernate-jpa-2.0-api</artifactId>
            <version>1.0.0.Final</version>
            <scope>provided</scope>
        </dependency>
    </dependencies>
    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-ear-plugin</artifactId>
                <version>2.9</version>
                <configuration>
                    <defaultJavaBundleDir>lib</defaultJavaBundleDir>
                    <classifier>${db}${asb}${jdbcprefs.classifier}</classifier>
                    <modules>
                        <ejbModule>
                            <groupId>org.dcm4che</groupId>
                            <artifactId>dcm4chee-xds2-registry-ws</artifactId>
                        </ejbModule>
                        <ejbModule>
                            <groupId>org.dcm4che</groupId>
                            <artifactId>dcm4chee-xds2-service</artifactId>
                        </ejbModule>
                        <webModule>
                            <groupId>org.dcm4che</groupId>
                            <artifactId>dcm4chee-xds2-registry-war</artifactId>
                            <contextRoot>/xds-reg-rs</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.dcm4che</groupId>
                            <artifactId>dcm4chee-xds2-browser-rs</artifactId>
                            <contextRoot>/xds-browser/rs</contextRoot>
                        </webModule>
                        <webModule>
                            <groupId>org.dcm4chee</groupId>
                            <artifactId>dcm4chee-conf-web</artifactId>
                            <contextRoot>/xds-browser</contextRoot>
                            <bundleFileName>dcm4chee-xds2-browser.war</bundleFileName>
                        </webModule>
                    </modules>
                    <version>6</version>
                </configuration>
            </plugin>
        </plugins>
    </build>


    <profiles>
        <profile>
            <id>security-disabled</id>
            <properties>
                <conf-web-classifier>-unsecure</conf-web-classifier>
            </properties>
        </profile>

        <profile>
            <id>asb</id>
            <dependencies>
                <dependency>
                    <groupId>org.dcm4chee</groupId>
                    <artifactId>dcm4chee-conf-db</artifactId>
                    <classifier>asb</classifier>
                    <type>ejb</type>
                    <version>${conf-db-storage.version}</version>
                </dependency>
            </dependencies>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.apache.maven.plugins</groupId>
                        <artifactId>maven-ear-plugin</artifactId>
                        <version>2.6</version>
                        <configuration>
                            <defaultJavaBundleDir>lib</defaultJavaBundleDir>
                            <modules combine.children="append">
                                <ejbModule>
                                    <groupId>org.dcm4chee</groupId>
                                    <artifactId>dcm4chee-conf-db</artifactId>
                                </ejbModule>
                            </modules>
                            <version>6</version>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>
</project>
